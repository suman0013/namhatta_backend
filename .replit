modules = ["nodejs-20", "java-graalvm22.3", "web", "bash"]
run = "npm run dev"
hidden = [".config", ".git", "generated-icon.png", "node_modules", "dist"]

[nix]
channel = "stable-25_05"
packages = ["mysql80", "sqlite", "jdk17", "maven"]

[deployment]
deploymentTarget = "autoscale"
build = ["npm", "run", "build"]
run = ["npm", "start"]

[[ports]]
localPort = 5000
externalPort = 80

[[ports]]
localPort = 8080
externalPort = 8080

[[ports]]
localPort = 41987
externalPort = 3000

[[ports]]
localPort = 46813
externalPort = 6000

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Frontend (Vite)"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Spring Boot Backend"

[[workflows.workflow]]
name = "Frontend (Vite)"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "export VITE_API_BASE_URL=http://localhost:8080 && npm run dev -- --port 5000 --host 0.0.0.0"
waitForPort = 5000

[workflows.workflow.metadata]
outputType = "webview"

[[workflows.workflow]]
name = "Spring Boot Backend"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "bash start-springboot.sh"
waitForPort = 8080

[workflows.workflow.metadata]
outputType = "console"

[agent]
expertMode = true
